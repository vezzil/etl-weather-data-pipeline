# Weather ETL Pipeline Environment Configuration

# OpenWeatherMap API Configuration
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Database Configuration
# Options: 'postgresql' or 'sqlite'
DB_TYPE=sqlite

# PostgreSQL Configuration (only if DB_TYPE=postgresql)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=weather_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# SQLite Configuration (only if DB_TYPE=sqlite)
DB_PATH=./data/weather_data.db

# Cities Configuration
# Path to JSON file with cities list (optional)
CITIES_CONFIG_PATH=./config/cities.json

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/weather_etl.log

# Data Quality Thresholds
MIN_RETENTION_RATE=0.8
MIN_QUALITY_SCORE=70
MIN_RECORDS=5

# Email Configuration (for Airflow notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FAILURE_EMAIL_LIST=admin@yourcompany.com,team@yourcompany.com

# Airflow Configuration
AIRFLOW_HOME=./airflow
AIRFLOW__CORE__DAGS_FOLDER=./airflow_dag
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=sqlite:///./airflow/airflow.db